<h2>New Comment for <%= @activity.name %>:</h2>
<br>

<%= render partial: 'layouts/flash_notice' %>

<br>
<div class="fields_with_errors", id="form">
  <%= form_for @comment do |f| %>
    <%= f.label :title, "Comment Title" %>
    <%= f.text_field :title %>
    <br>
    <%= f.hidden_field :activity_id, value: @activity.id %>

    <%= f.label :content, "Content" %>
    <br>
    <%= f.text_area :content, size: "50x10" %>
    <br>
    <%= f.submit "Add Comment" %>
  <% end %>
</div>
