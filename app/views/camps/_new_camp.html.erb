<%= form_for camp do |f| %>
  <%= f.label :name, "Camp Name" %>
  <%= f.text_field :name %>
  <br>
  <br>
  <br>
  Add Activity:
  <br>
  <br>
    <%= f.fields_for :activity do |activity_form| %>
      <%= activities_form.label :name %>
      <%= activities_form.text_field :name %>

      <%= activities_form.hidden_field :camp_id, value: "camp.id" %>
      <br>
      <%= activities_form.label :description %>
      <%= activities_form.text_field :description, size: "50x10" %>
    <% end %>
  <br>
  <br>
  <%= f.submit "Add Camp" %>
<% end %>
