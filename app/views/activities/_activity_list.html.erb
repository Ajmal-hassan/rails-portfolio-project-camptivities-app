<% @camps.each do |camp| %>
  <h3 style="font-weight:500;"><%= camp.name %></h3>

  <% camp.activities.each do |activity| %>
    <p>
      <strong>
      <%= link_to "#{activity.name}", activity_path(activity) %>
      </strong>
      <br>
      <br>
      <%= activity.description %>
      <br>
      <br>
      <br>
    </p>
  <% end %>
<br>
<br>
<% end %>
