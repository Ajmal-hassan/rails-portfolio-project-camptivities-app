<h2>Update <%= @activity.name %> Activity</h2>
<br>

<%= render partial: 'layouts/flash_notice' %>

<div class="fields_with_errors", id="form">
  <%= render partial: 'edit_activity', locals: {activity: @activity} %>
</div>

<br>

<% if @current_user.admin %>
  <%= link_to "Delete Activity", @activity, method: :delete, data: { confirm: "Delete This Activity?" } %>
<% end %>
